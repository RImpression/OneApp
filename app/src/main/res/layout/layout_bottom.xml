<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_bottom_height"
    android:gravity="center"
    android:orientation="horizontal"
    android:layout_alignParentBottom="true"
    android:background="@drawable/boder">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:gravity="center">
        <TextView
            android:id="@+id/tvPraise"
            style="@style/bottom_view"
            android:drawableLeft="@mipmap/icon_parise_nomal"/>

    </RelativeLayout>
    <View
        android:layout_width="1dp"
        android:layout_height="@dimen/layout_bottom_view_height"
        android:background="@color/gray"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvComment"
            style="@style/bottom_view"
            android:drawableLeft="@mipmap/icon_comment"/>
    </LinearLayout>
    <View
        android:layout_width="1dp"
        android:layout_height="@dimen/layout_bottom_view_height"
        android:background="@color/gray"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvShare"
            style="@style/bottom_view"
            android:drawableLeft="@mipmap/icon_share"/>
    </LinearLayout>

</LinearLayout>
