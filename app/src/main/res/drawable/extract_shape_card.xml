<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle"
            android:dither="true">

            <corners android:radius="1dp"/>
            <stroke
                android:width="1dp"
                android:color="#ccc" />
        </shape>
    </item>

    <item
        android:bottom="1dp"
        >
        <shape
            android:shape="rectangle"
            android:dither="true">
            <corners android:radius="1dp"/>

        </shape>
    </item>

</layer-list>